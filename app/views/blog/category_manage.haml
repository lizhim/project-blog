%div(style="background-color: #f5f5f5;height: 70px;")
  .container
    .row
      =render "header"
      .col-md-9.post-border.post-padding(style='margin-left: 5px;margin-bottom: 20px;')
        .form-horizontal(role="form")
          %form
            .form-group
              %label.col-sm-2(style="padding-left: 10px;margin-bottom: 0;")
                博文分类管理
                %hr
            .form-group
              %label.col-sm-2(style="padding-left: 10px;margin-bottom: 0;")
                新增博文分类：
                %input(type='text' style='width: 400px; height: 30px')
                %span
                  %a.btn.btn-primary(href='javascript:void(0)')提交
            %br
            .form-group(style='text-align: center')
              %table.table.table-hover
                %tr(style="text-align:center")
                  %th名称
                  %th文章数量
                  %th管理
                  %th排序
                -if @category.present?
                  -@category.each do |category|
                    %tr
                      %td
                        =category[0]
                      %td
                        =category[1]
                      %td
                        =link_to "编辑"
                        -#=link_to "删除", blog_destroy_path(account.title),method: :delete, data: { confirm: '您确定要删除'+category[0] + '?' }
                      %td
                        %a(href="javascript:{}")
                          %i.arrow-up
                        %a(href="javascript:{}")
                          %i.arrow-down
